@{
    ViewData["Title"] = "Category Page";
}

@model List<Category>

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-stripped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td>
                        <a class="btn btn-link" asp-controller="category" asp-action="edit" asp-route-id="@category.Id">Edit</a>
                        <a class="btn btn-link" asp-controller="category" asp-action="delete" asp-route-id="@category.Id" onclick="confirmDelete()">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-primary" asp-controller="category" asp-action="add">Add</a>
}

@section scripts {
    <script>
        function confirmDelete() {
            return confirm("Are you sure, you want to delete this category?")
        }
    </script>
}
